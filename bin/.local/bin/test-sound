#!/usr/bin/env bash

# Get all system sounds
sounds=$(ls /System/Library/Sounds)

echo "ðŸ”Š Testing all system sounds..."
echo "Press Ctrl+C to stop"
echo "------------------------"

for sound in $sounds; do
    name="${sound%.aiff}"
    echo "Playing: $name"
    afplay "/System/Library/Sounds/$sound"
    sleep 1
done
